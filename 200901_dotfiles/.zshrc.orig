# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh

comprun()
{
    if [[ $# != 1 ]] || [[ $1 != *.c ]]; then
        echo "Usage: comprun file.c"
        return 1
    fi
    if [[ ! -f "$1" ]]; then
        echo "No such file: $1"
        return 1
    fi
    local outfile=${1%.c}
    gcc -Wall -Wextra -pedantic -std=c11 -O2 -g "$1" -o "$outfile" && ./"$outfile"
}

